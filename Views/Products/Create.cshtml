@model ProductManagement.Models.Product
@{
    ViewData["Title"] = "Create Product";
}

<h1>Create</h1>

<form asp-action="Create" method="post" class="shadow-sm p-4 rounded bg-light">
    <div class="mb-3">
        <label asp-for="Name" class="form-label fw-semibold"></label>
        <input asp-for="Name" class="form-control" placeholder="Enter product name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label fw-semibold"></label>
        <input asp-for="Price" class="form-control" placeholder="Enter price" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Stock" class="form-label fw-semibold"></label>
        <input asp-for="Stock" class="form-control" placeholder="Enter stock quantity" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label fw-semibold"></label>
        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter product description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
        <button type="submit" class="btn btn-success">
            <i class="bi bi-check-circle"></i> Save
        </button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
