@model IEnumerable<ProductManagement.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Add New</a>
</p>

<table class="table table-hover table-bordered align-middle shadow-sm">
    <thead class="table-primary text-center">
        <tr>
            <th style="width:5%">#</th>
            <th style="width:25%">Product Name</th>
            <th style="width:15%">Price (â‚«)</th>
            <th style="width:10%">Stock</th>
            <th style="width:20%">Actions</th>
        </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
                <td class="text-center">@item.Id</td>
                <td>@item.Name</td>
                <td class="text-end text-success fw-semibold">@item.Price.ToString("N0")</td>
                <td class="text-center">@item.Stock</td>
                <td class="text-center">
                    <a class="btn btn-sm btn-outline-info me-1" asp-action="Details" asp-route-id="@item.Id">
                        <i class="bi bi-eye"></i> Details
                    </a>
                    <a class="btn btn-sm btn-outline-warning me-1" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="5" class="text-center text-muted py-4">
                <i class="bi bi-inbox"></i> No products found.
            </td>
        </tr>
    }
    </tbody>
</table>

